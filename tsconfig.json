{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "target": "ES5",
    "paths": {
      "@/*": ["./*"],
      "config": [
        "core/ts/config/development.ts",
        "core/ts/config/production.ts"
      ]
    }
  },
  "exclude": ["node_modules"]
}
